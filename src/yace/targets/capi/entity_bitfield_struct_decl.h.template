/**
 * {{ entity.doc }}
 *
{%- if entity.doc.description %}
 * {{ entity.doc.description }}
 *
{%- endif %}
 * @union {{ entity.sym }}
 */
{%- endif %}
union {{ entity.sym }} {
	struct {
	    {% for member in entity.members -%}
	    uint{{ entity.nbits }}_t {{ member.sym }} : {{ member.nbits }};{% if member.doc %} ///< {{ member.doc }}{% endif %}
